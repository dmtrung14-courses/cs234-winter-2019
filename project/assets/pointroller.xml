<!--
Modified from examples/point.xml
* Removed the hinge joint and the pointer geom.
* Set compiler angle to radians
* Set gear=500 for the slide actuators to make them more responsive.
* Set default geom to have material 'geom' with texture 'texgeom'
* Modified texture 'texgeom'
-->
<?xml version="1.0" ?>
<mujoco>
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.02"/>
  <default>
    <joint armature="0" damping="0" limited="false"/>
    <geom conaffinity="0" condim="3" density="100" friction="1 0.5 0.5" margin="0" rgba="1 1 0.5 0.7" material="geom"/>
  </default>
  <asset>
    <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
    <texture builtin="flat" height="1278" mark="cross" markrgb="0.3 0.3 0.3" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
    <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8" type="2d" width="100"/>
    <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="30 30" texture="texplane"/>
    <material name="geom" texture="texgeom" texuniform="true"/>
  </asset>
  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane"/>
    <body name="torso" pos="0 0 0">
      <geom name="pointbody" pos="0 0 0.5" size="0.5" type="sphere"/>
      <!--Damping http://mujoco.org/book/modeling.html#CDamping
          Damping generates a force proportional to velocity and opposite to it. -->
      <!-- Joint http://www.mujoco.org/book/XMLreference.html#joint -->
      <!-- <geom name="pointarrow" pos="0.6 0 0.5" size="0.5 0.1 0.1" type="box"/> -->
      <joint axis="1 0 0" name="ballx" pos="0 0 0" type="slide"/>
      <joint axis="0 1 0" name="bally" pos="0 0 0" type="slide"/>
      <!-- <joint axis="0 0 1" limited="false" name="rot" pos="0 0 0" type="hinge"/> -->
    </body>
  </worldbody>

  <actuator>
    <!--Actuator http://www.mujoco.org/book/XMLreference.html#actuator
        For how gear interacts with different joints,
        see: http://www.mujoco.org/book/XMLreference.html#general -->
    <motor name="motorx" gear="500" ctrllimited="false" ctrlrange="-1 1" joint="ballx" />
    <motor name="motory" gear="500" ctrllimited="true" ctrlrange="-1 1" joint="bally" />
  </actuator>
</mujoco>
